@model NomenProgram.Models.NomData

@{
    ViewBag.Title = "Удаление товара";
}

<h2>@ViewBag.Title</h2>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Товар: @Html.DisplayFor(model => model.FNAME)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Код товара")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt>
            @Html.Label("Краткое наименование")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SNAME)
        </dd>

        <dt>
            @Html.Label("Полное наименование")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FNAME)
        </dd>

        <dt>
            @Html.Label("Наличие товара")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ITEM_CNT)
        </dd>

        <dt>
            @Html.Label("Единица измерения")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomcount_types.TYPE)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("К списку товаров", "Index")
        </div>
    }
</div>
