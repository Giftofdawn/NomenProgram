@model IEnumerable<NomenProgram.Models.NomData>

@{
    ViewBag.Title = "Список товаров";
}

<h2>@ViewBag.Title</h2>


<br />

<table class="table">
    <tr>
        <th>
            @Html.Label("Код товара")
        </th>
        <th>
            @Html.Label("Краткое наименование товара")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="item-list" onclick="location.href='@Url.Action("Details", "NomDatas", new { id = item.ID })'">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SNAME)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<div class="form-group">
        <input type="submit" value="Добавить товар" class="btn btn-default" onclick="location.href='@Url.Action("Create", "NomDatas")'" />
</div>
